{
  "name": "json-summary-reporter",
  "version": "0.0.1",
  "description": "A GitHub Action for reporting code coverage from json-summary files",
  "main": "index.js",
  "repository": "https://github.com/iKadmium/json-summary-reporter.git",
  "author": "Jesse Higginson",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:ci": "jest --config=./jest.config.js --collectCoverage",
    "build": "ncc build src/main.ts",
    "start": "ts-node src/main.ts --nolazy -r ts-node/register/transpile-only"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.3",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-jest": "^27.0.6",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "prettier": "2.3.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@vercel/ncc": "^0.29.0"
  }
}